<?xml version="1.0" encoding="UTF-8"?>
<!-- <gameserver address="127.0.0.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ipconfig.xsd"> -->
<gameserver address="127.0.0.1">	<!-- Ваш внешний IP адрес, который вы прописываете в L2.ini -->
<define subnet="127.0.0.0/8" address="127.0.0.1" />    <!-- localhost loopback  -->
	<define subnet="10.0.0.0/8" address="10.0.0.0" />    <!-- Сюда свой локальный IP -->
	<define subnet="172.16.0.0/19" address="172.16.0.0" />    <!-- Сюда свой локальный IP, если есть 2 локальное подключение -->
	<define subnet="192.168.0.0/16" address="192.168.0.0" />    <!-- Сюда свой локальный IP, если есть 3 локальное подключение -->
</gameserver>